{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/test", "**/node_modules"]
}
