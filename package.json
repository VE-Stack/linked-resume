{
  "name": "@resume/monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "libs/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn workspaces foreach run build",
    "coverage": "",
    "start:dev": "concurrently \"yarn:start:dev:*\"",
    "start:dev:backend": "yarn workspace @resume/backend run start:dev",
    "start:dev:client": "yarn workspace @resume/client run start:dev",
    "start:dev:lib:utils": "yarn workspace @resume/utils run start:dev",
    "test": "yarn workspaces foreach run test"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/glob": "^8",
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "@types/prettier": "^2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/supertest": "^2.0.11",
    "@types/testing-library__jest-dom": "^5",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "prettier-plugin-packagejson": "^2.4.0",
    "prettier-plugin-tsconfig": "^0.0.1",
    "rimraf": "^3.0.2"
  },
  "packageManager": "yarn@3.3.1"
}
